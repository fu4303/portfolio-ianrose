<div class="entry--category-container">
  <div class="entry entry--category<% if (current.path[0] == 'index'){ %> is-home<% } %>" itemscope="" itemprop="blogPost" itemtype="http://schema.org/BlogPosting">
    <div class="entry--txt">
      <% if(entry.date) { %>
      <div class="meta--txt">
        <% include time%>
      </div>
      <% } %>
      <% if(entry.art) { %>
      <a class="entry--media" href="/<%- parentSlug %>/<% if (current.path[0] == 'index'){ %><%= slug[i] %><% } else { %><%= slug %><% } %>">
        <img class="img-responsive media--entry media--entry-default" src="/images/<%= entry.art %>" alt="<%= entry.title %>">
      </a>
      <% } %>
      <% if(current.path[0] == 'index') { %>
      <h3 class="entry-heading--category" itemprop="headline">
        <a href="/<%- parentSlug %>/<% if (current.path[0] == 'index'){ %><%= slug[i] %><% } else { %><%= slug %><% } %>"><%= entry.title %></a>
      </h3>
      <% } else { %>
      <h2 class="entry-heading--category" itemprop="headline">
        <a href="/<%- parentSlug %>/<% if (current.path[0] == 'index'){ %><%= slug[i] %><% } else { %><%= slug %><% } %>"><%= entry.title %></a>
      </h2>
      <% } %>
      <p class="dek" itemprop="description"><%= entry.desc %></p>
    </div>
  </div>
</div>
