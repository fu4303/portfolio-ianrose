<div class="col col-xs-7 col-md-half pad-xs">
	<div class="entry archive-type-<%= post.layout %>" itemscope itemprop="blogPost" itemtype="http://schema.org/BlogPosting">
		<% if (post.art) { %>
		<a href="<%- config.root %><%- post.path %>"><img class="img-responsive media--entry media--entry-default" src="/<%-post.path%><%-post.art%>" alt="<%=post.arttext%>"/></a>
		<% } %>
		<%- partial('entry-heading', {class_name: 'archive-article-title'}) %>
		<div class="meta--txt">
			<%- partial('partials/date', {class_name: '', page: post}) %>
			<%- partial('partials/tag', {class_name: '', page: post}) %>
		</div>
	</div>
</div>

