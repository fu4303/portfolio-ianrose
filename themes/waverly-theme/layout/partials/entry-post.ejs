<div class="entry archive-type-<%= post.layout %>" itemscope itemprop="blogPost" itemtype="http://schema.org/BlogPosting">
	<div class="meta--container">
		<%- partial('partials/date', {class_name: '', page: post}) %>
		<%- partial('partials/tag', {class_name: '', page: post}) %>
	</div>
	<%- partial('entry-heading', {class_name: 'archive-article-title'}) %>
	<% if (post.art) { %>
	<a href="<%- config.root %><%- post.path %>"><img class="img-responsive media--entry media--entry-default" src="/img/<%=post.art%>" alt="<%=post.arttext%>"/></a>
	<% } %>
	<% if(post.excerpt && index) {%>
	<p class="dek" itemprop="description">
		<%= strip_html(post.excerpt) %>
		<% } else { %>
		<a href="<%- config.root %><%- post.path %>"><%= theme.excerpt_link %></a>
	</p>
	<% } %>
</div>
