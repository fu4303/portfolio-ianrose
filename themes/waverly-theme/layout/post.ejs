
<article class="article--post" itemscope itemprop="blogPost" itemtype="http://schema.org/BlogPosting">
	<div class="meta--txt meta--heading">
		<%- partial('partials/category', {class_name: ''}) %>
		<%- partial('partials/tag', {class_name: ''}) %>
	</div>
	<div class="meta--txt meta--heading">
		<%- partial('partials/date', {class_name: ''}) %>
	</div>
	<header>
		<h1 itemprop="name">
			<%=page.title%>
		</h1>
		<% if (page.excerpt) { %>
			<p class="dek dek--lg"><%= strip_html(page.excerpt) %></p>
		<% } %>
		<%if (config.author) { %>
			<div class="byline">
				by <span itemprop="author creator"><%= config.author %></span>
			</div>
		<% } %>
	</header>
	<div class="article--body" itemprop="articleBody">
		<%-page.more%>
	</div>
</article>
<nav class="nav" role="navigation">
<% if (page.prev) { %>
	<div class="nav--post nav--prev">
		<h5 class="nav--post-heading"><%= page.prev.title %></h5>
		<p class="dek dek--sm"><%= strip_html(page.prev.excerpt) %></p>
		<a class="button--link" href="<%- url_for(page.prev.path) %>">Previous</a>
	</div>
<% } %>

<% if (page.next) { %>
	<div class="nav--post nav--next">
		<h5 class="nav--post-heading"><%= page.next.title %></h5>
		<p class="dek dek--sm"><%= strip_html(page.next.excerpt) %></p>
		<a class="button--link" href="<%- url_for(page.next.path) %>">Next</a>
	</div>
<% } %>
</nav>
