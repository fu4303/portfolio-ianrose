<div class="row">
	<p class="heading heading--page"><%= config.description %></p>
</div>
<div class="row">
	<div class="col col-xs-7 col-sm-1 pad-xs">
		<div class="h1 alt-txt" aria-hidden="true">01</div>
	</div>
	<div class="col col-xs-7 col-sm-6">
		<div class="pad-xs">
			<h2 class="meta--txt meta--primary meta--heading">Articles</h2>
		</div>
		<div class="row">
			<%site.categories.findOne({name: 'articles'}).posts.sort('date', -1).limit(14).each(function(post) {%>
