<% if (item.link){ %>
  <% if (item.title){ %>
    <h1 class="post-title"><a href="<%- item.link %>" target="_blank"><%= item.title %></a></h1>
  <% } else { %>
    <h1 class="post-title"><a href="<%- item.link %>" target="_blank"><%= item.link %></a></h1>
  <% } %>
<% } else { %>
  <% if (index){ %>
    <h1 class="post-title"><a href="<%- config.root %><%- item.path %>"><%= item.title %></a></h1>
  <% } else { %>
    <h1 class="post-title"><%= item.title %></h1>
  <% } %>
<% } %>