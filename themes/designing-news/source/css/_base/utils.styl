remCalc($target, $context = $base-font-size) {
  ($target / $context) + 0rem;
}

unitlessRhythm($lines, $context) {
  ($base-vertical-unit * $lines) / $context;
}

remRhythm($lines) {
  (($base-vertical-unit * $lines) / $base-font-size) + 0rem;
}

setType($font-size, $lines) {
  font-size: remCalc($font-size);
  line-height: (($base-vertical-unit * $lines) / $font-size);
}

.clearfix {
  &:before,
  &:after {
    content: " ";
    display: table;
  }
  &:after {
    clear: both;
  }
}

.center-block {
  display: block;
  margin-left: auto;
  margin-right: auto;
}