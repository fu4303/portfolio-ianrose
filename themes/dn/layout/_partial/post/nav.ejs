<% if (post.prev || post.next){ %>
<nav id="article-nav">
  <% if (post.prev){ %>
    <a href="<%- config.root %><%- post.prev.path %>" id="article-nav-newer" class="button button-default article-nav-link-wrap">
      <span class="icon-arrow-left7"></span>
      <span class="article-nav-title">
        <% if (post.prev.title){ %>
        <%= post.prev.title %>
        <% } else { %>
        (no title)
        <% } %>
      </span>
    </a>
  <% } %>
  <% if (post.next){ %>
    <a href="<%- config.root %><%- post.next.path %>" id="article-nav-older" class="button button-default article-nav-link-wrap">
      <span class="article-nav-title"><%= post.next.title %></span>
      <span class="icon-arrow-right8"></span>
    </a>
  <% } %>
</nav>
<% } %>