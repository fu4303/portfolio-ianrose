<div class="row">
  <div class="col col-xs-12 col-lg-12 col-lg-offset- pad-xs">
    <div>
      <div class="entry archive-type-<%=post.layout%>" itemscope itemprop="blogPost" itemtype="http://schema.org/BlogPosting">
        <%-partial('post/date', {
            class_name: 'entry-meta-item entry-meta-item--time',
            date_format: 'MMMM D, YYYY'
          })%>
        <h2 class="h1" itemprop="name headline">
          <a href="<%-config.root%> <%-post.path%>"><%=post.title%></a>
        </h2>
        <%if (post.art) {%>
        <a href="<%-config.root%> <%-post.path%>"><img class="img-responsive media--entry media--entry-work" src="/<%-post.path%> <%-post.art%>" alt="<%=post.arttext%>"/></a>
        <%}%>
        <%if (post.excerpt && index) {%>
        <p class="dek dek--archive">
          <%-post.excerpt%>
          <%} else {%>
          <a href="<%-config.root%> <%-post.path%>"><%=theme.excerpt_link%></a>
        </p>
        <%}%>
      </div>
    </div>
  </div>
</div>
