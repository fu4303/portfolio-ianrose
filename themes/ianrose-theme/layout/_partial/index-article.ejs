<div class="entry archive-type-<%= post.layout %>">
<%- partial('post/date', { class_name: 'entry-meta-item entry-meta-item--time entry-meta-item--time-sm', date_format: 'MMMM D, YYYY'}) %>
<%- partial('post/entry-article-title', {class_name: 'archive-article-title'}) %>
<% if (post.art) { %>
  <a href="<%- config.root %><%- post.path %>"><img class="img-responsive media--entry media--entry-default" src="/img/<%=post.art%>" alt="<%=post.arttext%>"/></a>
<% } %>
<% if(post.excerpt && index) {%>
  <p class="excerpt">
    <%- post.excerpt %>
	<% } else { %>
  <a href="<%- config.root %><%- post.path %>"><%= theme.excerpt_link %></a>
</p>
<% } %>
</div>
