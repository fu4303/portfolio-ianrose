<div id="<%= post.layout %>-<%= post.slug %>" class="entry--<%= post.layout %>" itemscope itemprop="blogPost">
  <div class="row">
    <div class="col col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 pad-xs">
      <div>
        <%- partial('post/date', {
          class_name: 'entry-meta-item entry-meta-item--time',
          date_format: null
        }) %>
        <% if(!page.category) {%>
        <small class="entry-meta-item">|</small>
        <%- list_categories(post.categories, {
          show_count: false,
          style: 'none',
          separator: '',
          amount: 1,
          class: 'entry-meta-item entry-meta-item--tax category'
        }) %>
        <% } %>
      </div>
      <%- partial('post/title', {class_name: 'article-title'}) %>
      <% if (post.excerpt) { %>
      <p class="dek"><%- post.excerpt %></p>
      <% } %>
    </div>
  </div>
  <div class="row">
    <div class="col col-xs-12 col-md-9 col-lg-7 last-md pad-xs" itemprop="articleBody">
      <div class="article">
        <%if (post.art) { %>
          <img class="media--full" src="/<%-post.path%><%=post.art%>" alt=""/>
        <% } %>
        <%- post.content %>
      </div>
      <%- partial('post/meta') %>
    </div>
    <div class="col col-xs-12 col-md-1 col-md-offset-1 col-lg-offset-2 pad-xs">
      <%- partial('post/share') %>
    </div>
  </div>
</div>
<% if (!index) { %>
<% if (post.prev || post.next) { %>
<div class="row">
  <div class="col col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 pad-xs">
    <%- partial('post/nav')%>
  </div>
</div>
<% } %>
<% } %>
<% if (post.comments && config.disqus_shortname && !page.category) { %>
<div id="comments" class="row">
  <div class="col col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 pad-xs">
    <div id="disqus_thread"></div>
    <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = '<%= config.disqus_shortname %>'; // required: replace example with your forum shortname

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function () {
        var dsq = document.createElement('script');
        dsq.type = 'text/javascript';
        dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
    </script>
    <noscript>Please enable JavaScript to view the
      <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>
    </noscript>
  </div>
</div><% } %>

