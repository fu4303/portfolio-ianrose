<% if (post.tags && post.tags.length) { %>
<div class="entry-meta--container">
	<div class="entry-meta-item entry-meta-item--label"><small>Tagged</small></div>
	<%- list_tags(post.tags, {
		show_count: false,
		class: 'entry-meta-item entry-meta-item--tax entry-meta-item--tag',
		style: 'none',
		separator: ''
	}) %>
</div>
<% } %>
