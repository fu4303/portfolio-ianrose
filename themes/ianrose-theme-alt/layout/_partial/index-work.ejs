<div class="entry archive-type-<%= post.layout %>">
<%- partial('post/entry-article-title', {class_name: 'archive-article-title'}) %>
<% if (post.art) { %>
  <img class="img-responsive" src="/img/<%=post.art%>" alt=""/>
<% } %>
<% if (post.excerpt && index) { %>
<p class="excerpt">
	<%- post.excerpt %>
	<% } else { %>
  <a href="<%- config.root %><%- post.path %>"><%= theme.excerpt_link %></a>
</p>
<% } %>
</div>
