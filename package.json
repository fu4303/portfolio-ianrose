{
  "name": "ianrose.me",
  "version": "1.1.0",
  "description": "Source for Ian Rose's personal website",
  "private": true,
  "main": "index.js",
  "scripts": {
    "prestart": "node ./lib/download.js",
    "start": "node index.js",
    "debug": "DEBUG=metalsmith:*, NODE_ENV=debug npm run dev",
    "dev": "npm start --development",
    "build": "npm start --production",
    "lint": "standard --verbose && stylelint '**/*.scss' && htmlhint **/*.{hbs,html} --config .htmlhintrc --ignore **/www/**"
  },
  "repository": {
    "type": "git",
    "url": "git+https://ianrose@github.com/ianrose/machinist.git"
  },
  "keywords": [
    "metalsmith",
    "boilerplate",
    "static",
    "site"
  ],
  "author": "Ian Rose",
  "license": "Copyright Â© Ian Rose",
  "bugs": {
    "url": "https://github.com/ianrose/machinist/issues"
  },
  "homepage": "https://github.com/ianrose/machinist#readme",
  "standard": {
    "ignore": [
      "**/vendor/**"
    ]
  },
  "stylelint": {
    "ignoreFiles": [
      "src/styles/vendor/*.scss"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "function-name-case": null
    }
  },
  "dependencies": {
    "autoprefixer": "^6.4.0",
    "c3": "^0.4.11",
    "d3": "^3.5.17",
    "download-file": "^0.1.5",
    "handlebars": "^4.0.5",
    "handlebars-helpers": "^0.7.5",
    "metalsmith": "^2.2.0",
    "metalsmith-assets": "^0.1.0",
    "metalsmith-autotoc": "^0.1.2",
    "metalsmith-collections": "petasittek/metalsmith-collections",
    "metalsmith-drafts": "0.0.1",
    "metalsmith-in-place": "^1.4.4",
    "metalsmith-layouts": "^1.6.5",
    "metalsmith-mapsite": "^1.0.4",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-metadata": "0.0.4",
    "metalsmith-paths": "^2.1.2",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-postcss": "^4.0.0",
    "metalsmith-register-helpers": "^0.2.0",
    "metalsmith-sass": "^1.3.0",
    "metalsmith-uglify": "^1.5.1",
    "metalsmith-webpack": "^1.0.3",
    "metalsmith-with-postcss": "^1.0.0",
    "typesettings": "^3.0.1",
    "typogr": "^0.6.6"
  },
  "devDependencies": {
    "htmlhint": "^0.9.13",
    "metalsmith-browser-sync": "^1.1.1",
    "metalsmith-debug": "^1.1.0",
    "metalsmith-writemetadata": "^0.4.5",
    "standard": "^8.5.0",
    "stylefmt": "^4.3.1",
    "stylelint": "^7.5.0",
    "stylelint-config-standard": "^14.0.0"
  }
}
